@model IEnumerable<ProductVM>

@{ ViewData["Title"] = "Home Page";
                var detailsRoute = "/Details/{0}"; }
<html>
<body style="background-color: #f8e7d5" ;>


    <div class="row">

        @foreach (var product in Model)
        {
<div class="col-4">
    <div class="card mb-4" style="background-image: linear-gradient(#f6ad76, #f6ad76, #000000)">

        <div class="card-header">
            <h4 class="my-0 font-italic">
                <label style="font-size:23px; color:black; ">@product.Name</label>
            </h4>
        </div>

        <img class="card-img-top" style="height:100%" src="~/@product.ImagePath" alt="no image" />

        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <label style="font-size:20px; color:white"><b>@product.Price Lei</b></label>
                </div>
                <a href="@string.Format(detailsRoute, product.Id)" class="btn pull-right btn-outline-info">Detalii produs</a>
            </div>
        </div>

    </div>
</div>}

    </div>

</body>
</html>